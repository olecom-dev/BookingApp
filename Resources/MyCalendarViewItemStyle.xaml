<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="CalendarViewDayItem" x:Key="MyCalendarViewItemStyle">
        <Setter Property="HorizontalAlignment" Value="Stretch"></Setter>
        <Setter Property="Foreground" Value="Snow"></Setter>
        <Setter Property="Background" Value="LightGreen"></Setter>
        <Setter Property="FontSize" Value="10"></Setter>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate x:Name="CT">

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Name="tbFullname"  Foreground="Snow" FontSize="14" Width="200" TextWrapping="Wrap"></TextBlock>
                    <TextBlock></TextBlock>

                    </StackPanel>





                </ControlTemplate>

            </Setter.Value>

        </Setter>

    </Style>
</ResourceDictionary>
